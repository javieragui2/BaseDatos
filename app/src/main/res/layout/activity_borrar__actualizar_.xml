<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Borrar_Actualizar_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Articulo"/>
        <EditText
            android:id="@+id/txt_idArticulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Id articulo"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Articulo"/>
        <EditText
            android:id="@+id/txt_nombreArticulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nombre articulo"
            android:inputType="text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Articulo"/>
        <EditText
            android:id="@+id/txt_precioArticulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Precio articulo"
            android:inputType="number"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_buscarEli"
            android:text="Buscar"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buscar" />
        <Button
            android:id="@+id/btn_Eliminar"
            android:text="Eliminar"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="eliminarFila"
            />
        <Button
            android:id="@+id/btn_Actualizar"
            android:text="Actualizar"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="actualizarFila"
            />
    </LinearLayout>
</LinearLayout>